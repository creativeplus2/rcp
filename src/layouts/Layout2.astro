---
const { frontmatter } = Astro.props;
import Header from "../components/Header.astro";
import Banner2 from "../components/Banner2.astro";
import Footer from "../components/Footer.astro";
import "../styles.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="PT RAHAYU CARITA PERKASA was established on February 24th, 1999. The company started as a general supplier for all types of equipment, tools, software solutions and maintenance services to support the oil and gas industry of Indonesia."
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<link
			rel="icon"
			type="image/png"
			href="/favicon.png"
		/>

		<title>{frontmatter.title}</title>
	</head>
	<body>
		<Header />
		<Banner2
			title={frontmatter.titlebanner}
			image={frontmatter.imagerbanner}
		/>

		<div class="row-small py-[2em] lg:py-[6.5em] prose">
			<slot />
		</div>

		<Footer />
		<script>
			import { initCheckScrollUpDown, hamburgerButton } from "../js/header.js";
			initCheckScrollUpDown();
			hamburgerButton();
		</script>
	</body>
</html>
